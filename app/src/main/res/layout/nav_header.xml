<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/colorPrimary"
    tools:background="@color/colorPrimary">


    <ImageView
        android:id="@+id/userImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_book"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:maxEms="15"
        android:text="Handy Dictionary"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_alignTop="@+id/userImage"
        android:layout_toRightOf="@+id/userImage"
        android:layout_toEndOf="@+id/userImage"
        android:layout_marginTop="23dp" />

    <TextView
        android:id="@+id/editProfileTv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/userImage"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="search the meaning of words as you go"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/profileEmailTv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/editProfileTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="#0073ff"
        android:textSize="16sp" />



</RelativeLayout>